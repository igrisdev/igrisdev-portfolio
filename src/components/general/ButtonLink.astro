---
import RowIcon from '@assets/icons/RowIcon.astro'

interface Props {
  url: string
  target?: boolean
  text: string
}

const { url = '/', target = false, text = 'Ver mas' } = Astro.props
---

<a
  href={url}
  target={target ? '_blank' : '_self'}
  rel='noopener noreferrer'
  class='group flex gap-1 text-sm text-primary items-center hover:text-primary-content'
>
  {text}
  <RowIcon
    width='12'
    styles='transition-transform duration-100 group-hover:scale-125'
  />
</a>
