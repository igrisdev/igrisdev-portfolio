---
import Star from '@assets/icons/star.svg'
import BorderStar from '@assets/icons/border-star.svg'

const { name, level, icon: Icon, url } = Astro.props

const newLevel = 5 - level

const star = Array.from({ length: level }, () => '')
const border_star = Array.from({ length: newLevel }, () => '')
---

<a
  href={url}
  target='_blank'
  rel='noopener noreferrer'
  class='flex flex-col items-center gap-2 py-4 border-[1px] border-base-300 hover:bg-base-200 transition-colors ease-in-out'
>
  <div class='flex items-center gap-2'>
    <Icon class='size-7 xs:size-4 sm:size-6' />
    <p class='text-xl xs:text-lg sm:text-xl font-medium'>{name}</p>
  </div>

  <div class='flex items-center gap-2 flex-wrap'>
    {star.map(item => <Star class='size-3' />)}
    {border_star.map(item => <BorderStar class='size-[14px]' />)}
  </div>
</a>
