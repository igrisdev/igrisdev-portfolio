      },
      {
        name: 'CSS',
        level: 4,
        icon: Css,
        url: 'https://developer.mozilla.org/es/docs/Web/CSS',
      },
      {
        name: 'TailwindCSS',
        level: 5,
        icon: TailwindCSS,
        url: 'https://tailwindcss.com/',
      },
      {
        name: 'JavaScript',
        level: 4,
        icon: JavaScript,
        url: 'https://developer.mozilla.org/es/docs/Web/JavaScript',
      },
      {
        name: 'TypeScript',
        level: 3,
        icon: TypeScript,
        url: 'https://www.typescriptlang.org/',
      },
      {
        name: 'Astro',
        level: 4,
        icon: AstroIcon,
        url: 'https://astro.build/',
      },
      {
        name: 'React',
        level: 4,
        icon: React,
        url: 'https://es.reactjs.org/',
      },
      // {
      //   name: 'Next.js',
      //   level: 2,
      //   icon: NextJS,
      //   url: 'https://nextjs.org/',
      // },
      {
        name: 'Angular +17',
        level: 2,
        icon: Angular,
        url: 'https://angular.io/',
      },
    ],
  },
  {
    title: 'Backend',
    technologies: [
      {
        name: 'Node.js',
        level: 3,
        icon: NodeJS,
        url: 'https://nodejs.org/en/',
      },
      {
        name: 'Express.js',
        level: 3,
        icon: Express,
        url: 'https://expressjs.com/',
      },
      {
        name: 'Strapi 5',
        level: 3,
        icon: Strapi,
        url: 'https://strapi.io/',
      },
      {
        name: 'MongoDB',
        level: 4,
        icon: MongoDB,
        url: 'https://www.mongodb.com/',
      },
      // {
      //   name: 'PostgreSQL',
      //   level: 3,
      //   icon: PostgreSQL,
