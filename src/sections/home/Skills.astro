import OracleSQL from '@assets/icons/oracledb.svg'
import Strapi from '@assets/icons/strapi.svg'

interface Skills {
  title: string
  technologies: Skill[]
}

interface Skill {
  name: string
  level: number
  icon: string | any
  url: string
}

const SKILLS: Skills[] = [
  {
    title: 'Frontend',
    technologies: [
      {
        name: 'HTML',
        level: 5,
        icon: Html,
