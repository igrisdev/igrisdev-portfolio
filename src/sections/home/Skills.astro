---

<SectionLayout
  styles='animate-fade-up animate-once animate-ease-out animate-delay-400'
>
  <span slot='title'>Habilidades</span>

  <main class='grid gap-5'>
    {
      SKILLS.map(({ title, technologies }: Skills) => (
        <section>
          <h2 class='text-lg font-base mb-2'>{title}</h2>
          <div class='grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2'>
            {technologies.map(technology => (
              <CardSkill {...technology} />
            ))}
          </div>
        </section>
      ))
    }
  </main>
</SectionLayout>
